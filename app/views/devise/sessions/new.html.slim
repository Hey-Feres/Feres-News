.Auth
  .box
    h2.text-center.mb-3 SignIn
    center
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email"
        .field
          = f.password_field :password, autocomplete: "current-password", placeholder: "Password"
        .actions.mt-3
          = f.submit "SignIn"
        .mt-3
          = render "devise/shared/links"    


css:
  .Auth {
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
  }
  .Auth .box{
    background: #fff;
    box-shadow: 1px 1px 25px 3px rgba(0,0,0,.1);
    width: 25%;
    height: auto;
    padding: 5% 0;    
    border-radius: 20px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    color: white;
  }
  .Auth .box input[type="email"], .Auth .box input[type="password"]{
    border: 1px solid #ccc;
    width: 90%;
    height: 40px;
    margin: 3% 0;
    padding: 2% 4%; 
    border-radius: 20px;
  }
  .Auth .box input[type="submit"]{
    border: none;
    width: 90%;
    height: 40px;
    margin: 3% 0;
    padding: 2% 4%; 
    border-radius: 20px;
    background: var(--primary);
    color: var(--secondary)
  }
  .Auth .box a{
    color: var(--primary);
  }
  @media only screen and (max-width: 600px) {
    .Auth .box{
      width: 70%;
      height: auto;
      padding: 15% 0;
      border-radius: 20px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      color: white;
    }
  }