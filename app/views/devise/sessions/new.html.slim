.Auth
  .box
    h2.text-center.mb-3 SignIn
    center
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email"
        .field
          = f.password_field :password, autocomplete: "current-password", placeholder: "Password"
        .actions.mt-3
          = f.submit "SignIn"
        .mt-3
          = render "devise/shared/links"    


css:
  .Auth {
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
  }
  .Auth .box{
    background: #ec008c;
    background: -webkit-linear-gradient(to right, #fc6767, #ec008c);
    background: linear-gradient(to right, #fc6767, #ec008c);
    box-shadow: 1px 1px 25px 3px var(--primary);
    width: 20%;
    height: 40%;
    border-radius: 20px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    color: white;
  }
  .Auth .box input[type="email"], .Auth .box input[type="password"]{
    border: none;
    width: 80%;
    height: 40px;
    margin: 3% 0;
    padding: 2% 4%; 
    border-radius: 20px;
  }
  .Auth .box input[type="submit"]{
    border: none;
    width: 80%;
    height: 40px;
    margin: 3% 0;
    padding: 2% 4%; 
    border-radius: 20px;
    background: white;
    color: var(--primary)
  }
  .Auth .box a{
    color: white;
  }
  @media only screen and (max-width: 600px) {
    .Auth .box{
      background: #ec008c;
      background: -webkit-linear-gradient(to right, #fc6767, #ec008c);
      background: linear-gradient(to right, #fc6767, #ec008c);
      box-shadow: 1px 1px 25px 3px var(--primary);
      width: 80%;
      height: 50%;
      border-radius: 20px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      color: white;
    }
  }