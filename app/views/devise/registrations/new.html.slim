center
  .signup
    h2.text-center SignUp
    .mt-3
    center
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          = f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name"
        .field
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email"
        .field
          = f.password_field :password, autocomplete: "new-password", placeholder: "Password"
        .field
          = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password Confirmation"
        .actions.mt-3
          = f.submit "Sign up" 
        .mt-3
          = render "devise/shared/links"

css:
  body{
    background: #ec008c;
    background: -webkit-linear-gradient(to right, #fc6767, #ec008c);
    background: linear-gradient(to right, #fc6767, #ec008c);
  }
  .signup{
    background: white;
    width: 20%;
    height: auto;
    border-radius: 10px;
    padding: 2% 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .signup h2{
    font-weight: 200;
  }
  input[type="email"],input[type="password"],input[type="text"]{
    background: #f2f2f2;
    width: 90%;
    margin: 3% 5%;
    border: none;
    border-radius: 10px;
    padding: 2% 2%;
    color: #333;
  }
  input[type="submit"]{
    display: inline-block;
    background: #ec008c;
    background: -webkit-linear-gradient(to right, #fc6767, #ec008c);
    background: linear-gradient(to right, #fc6767, #ec008c);
    color: #fff;
    padding: 2% 0;
    border-radius: 20px;
    border: none;
    width: 50%;
    margin: 0 25%;
    cursor: pointer;
  }
  .signup a {
    color: #ec008c;
    text-decoration: none;
  }
  #error_explanation p{
    margin: 0;
    color: #ec008c;
  }

  @media only screen and (max-width: 600px) {
    .signup{
      background: white;
      width: 80%;
      height: 450px;
      border-radius: 10px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      margin-top: 15%;
    }
  }