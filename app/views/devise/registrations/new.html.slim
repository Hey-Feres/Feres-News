.Auth
  .box
    h2.text-center SignUp
    .mt-3
    center
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          = f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name"
        .field
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email"
        .field
          = f.password_field :password, autocomplete: "new-password", placeholder: "Password"
        .field
          = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password Confirmation"
        .actions.mt-3
          = f.submit "Sign up" 
        .mt-3
          = render "devise/shared/links"

css:
  .Auth {
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
  }
  .darkBody .Auth{
    background: #000;
  }
  .Auth .box{
    background: #fff;
    box-shadow: 1px 1px 25px 3px rgba(0,0,0,.1);
    width: 30%;
    height: auto;
    padding: 5% 0;
    border-radius: 20px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .darkBody .Auth .box{
    background: #111;
    box-shadow: 1px 1px 25px 3px transparent;
  }
  .darkBody .Auth .box h2{
    color: white;
  }  
  .Auth .box input[type="email"], 
  .Auth .box input[type="password"], 
  .Auth .box input[type="text"]{
    border: 1px solid #ccc;
    width: 90%;
    height: 40px;
    margin: 3% 0;
    padding: 2% 4%; 
    border-radius: 20px;
  }
  .darkBody .Auth .box input[type="email"], 
  .darkBody .Auth .box input[type="password"], 
  .darkBody .Auth .box input[type="text"]{
    border: 1px solid #222;
    background: #000;
    color: white;
  }
  .Auth .box input[type="submit"]{
    border: none;
    width: 90%;
    height: 40px;
    margin: 3% 0;
    padding: 2% 4%; 
    border-radius: 20px;
    background: var(--primary);
    color: var(--secondary)
  }
  .darkBody .Auth .box input[type="submit"]{
    background: var(--secondary);
    color: var(--primary)
  }  
  .Auth .box a{
    color: var(--primary);
  }
  .darkBody .Auth .box a{
    color: var(--secondary);
  }
  @media only screen and (max-width: 600px) {
    .Auth .box{
      width: 80%;
      height: auto;
      padding: 10% 0;
      border-radius: 20px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      color: white;
    }
  }
