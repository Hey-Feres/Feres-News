css:
	.categories{
		display: flex;
		justify-content: flex-start;
		padding: 0 4%;
	}
	.categories a{
		text-decoration: none;
		color: #333;
		font-weight: 200;
	}
	.category{
		width: 100px;
		height: 100px;
		padding: 20px 0;
		border-radius: 50%;
		background: #ec008c;
		background: -webkit-linear-gradient(to right, #fc6767, #ec008c);
		background: linear-gradient(to right, #fc6767, #ec008c);
	}
	.thin{
		font-weight: 200;
	}
	header{
		width: 100%;
		background: #fff;
		position: fixed;
		top: 0;
		left: 0;
		height: 40px;
		padding: 0 4%;
		z-index: 999;
	}
	header p {
  		font-size: 1.3em;
  		line-height: 40px;
  		font-family: sans-serif;
  		color: #ec008c;
	}
	.articles{
		display: flex;
		justify-content: space-between;
		width: 95%;
		margin: 0 2.5%;
	}
	.article{
		width: 95%;
		height: 450px;
		overflow: hidden;
		background: white;
		border-radius: 8px;
		box-shadow: 0 0 40px 3px rgba(0,0,0,0.2);
		padding: 2% 2% 7% 2%;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
	}
	.article .thumb{
		width: 100%;
		border-radius: 8px;
	}
	.article .title{
		font-size: 1.2em;
		font-weight: 300;
		text-align: center;
		margin-top: 5%;
	}
	.article a{
		color: #333;
		text-decoration: none;
	}
	.read {
	  	display: inline-block;
		background: #ec008c;
		background: -webkit-linear-gradient(to right, #fc6767, #ec008c);
		background: linear-gradient(to right, #fc6767, #ec008c);
	  	color: #fff;
	  	padding: 2% 0;
	  	border-radius: 20px;
	  	border: none;
	  	width: 50%;
	  	margin: 0 25%;
	  	cursor: pointer;
	}
	.topBar{
		display: flex;
		justify-content: space-between;
		padding: 0 3% 2% 3%;
	}
	.search{
		border: none;
		border-radius: 10px;
		padding: 0 1%;
	}
	.loader{
	  width: 100px;
	  height: 100px;
	  border-radius: 100%;
	  position: relative;
	  margin: 0 auto;
	}
	#loader span{
	  display: inline-block;
	  width: 10px;
	  height: 10px;
	  border-radius: 100%;
	  background-color: #ec008c;
	  margin: 35px 5px;
	}

	#loader span:nth-child(1){
	  animation: bounce 1s ease-in-out infinite;
	}

	#loader span:nth-child(2){
	  animation: bounce 1s ease-in-out 0.33s infinite;
	}

	#loader span:nth-child(3){
	  animation: bounce 1s ease-in-out 0.66s infinite;
	}

	@keyframes bounce{
	  0%, 75%, 100%{
	    -webkit-transform: translateY(0);
	    -ms-transform: translateY(0);
	    -o-transform: translateY(0);
	    transform: translateY(0);
	  }

	  25%{
	    -webkit-transform: translateY(-20px);
	    -ms-transform: translateY(-20px);
	    -o-transform: translateY(-20px);
	    transform: translateY(-20px);
	  }
	}

